{
  "name": "bike-rental-admin",
  "version": "1.0.0",
  "description": "Admin web application for Bike Rental System",
  "main": "dist/index.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "server": "node dist/index.js",
    "server:dev": "tsx server/index.ts",
    "server:watch": "tsx watch server/index.ts",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "dev": "concurrently \"npm run server:watch\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "start": "npm run server",
    "build": "npm run build:server && npm run client:build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.0",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  }
}
